Vagrant.configure("2") do |config|
  config.vm.box = "centos/7"
  config.vm.network "public_network"
  (1..3).each do |i|  
  config.vm.define "mesos-#{i}" do |mesos|
    config.vm.provider "virtualbox" do |mesos|
     mesos.memory = "1024"
     mesos.name = "mesos-#{i}"
     end
  end
  config.vm.provision "shell", inline: <<-SHELL
     yum -y update
   SHELL
  end
end
